<Window x:Class="LissajousWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LissajousWPF"
        mc:Ignorable="d"
        Title="Lissajous" Height="565.292" Width="707" Initialized="Window_Initialized">
    <Grid Name="grid1" Margin="0">
        <StackPanel>
            <WrapPanel>
                <Button x:Name="btnStart" Content="Start timer" Height="30" Width="100" Click="BtnStart_Click" Margin="5"/>
                <Button Name="btnClear" Content="Clear" Margin="5" Width="100" Height="30" Click="BtnClear_Click"/>
                <Button Name="btnStep" Content="Step+" Height="30" Margin="5" Width="64" Click="btnStep_Click"/>
            </WrapPanel>
            
            <Image Name="image" Height="480" Margin="5" Width="670"/>
        </StackPanel>
    </Grid>
</Window>
